@model BigSchool.ViewModels.CourseViewModel
@{
    ViewBag.Title = "CreateBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/controll/CourseControll.js"></script>
    <script src="~/Scripts/umd/bootbox.min.js"></script>
}



<!--For date-picker-->
<script src="~/Scripts/controll/gijgo.js" type="text/javascript"></script>
<link href="~/Content/gijgo.css" rel="stylesheet" type="text/css" />
<!--For date-picker-->

<h2>Create</h2>
@using (Html.BeginForm("Create", "Courses"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Place, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Place, new { htmlAttributes = new { @class = "form-control", } })
                @Html.ValidationMessageFor(model => model.Place, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Date, new { id = "datepicker", width = 400 })
                @Html.ValidationMessageFor(model => model.Date, "", new { htmlAttributes = new { @class = "text-danger", @type = "date" } })
                <script>
                    $('#datepicker').datepicker({
                        uiLibrary: 'bootstrap4',
                        format: 'mm/dd/yyyy'
                    });
                </script>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Time, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Time, new { id = "timepicker", width = 400 })
                @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
                <script>
                    $('#timepicker').timepicker({
                        uiLibrary: 'bootstrap4'
                    });

/**/</script>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Category, new SelectList(Model.Categories, "Id", "Name"), "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="btnCreateCourse" type="submit" value="Create" class="btn btn-primary" onclick="myFunction()" />
                <script>
                    function myFunction() { alert("Save Successful"); }
                </script>
            </div>
        </div>
        @section scripts
        {
            @Scripts.Render("~/bundles/jqueryval");
        }
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")

</div>